<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_beige"
    android:elevation="20dp"
    android:clipToOutline="true"
    android:outlineProvider="background"
    android:layout_marginStart="15dp"
    android:layout_marginBottom="15dp">

    <LinearLayout
        android:id="@+id/contenidoComentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

       >

        <TextView
            android:id="@+id/itemComentarioTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Excelente"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">


            <TextView
                android:id="@+id/puntuacionComentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:drawablePadding="4dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:gravity="center_vertical"
                app:drawableStartCompat="@drawable/star_outline"
                />
            <TextView
                android:id="@+id/guion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textColor="@color/black"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/usuarioComentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maria Eugenia"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:paddingStart="5dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/textoComentario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="La mejor pasta que comÃ­ en mi vida. La receta esta muy bien explicada. Mis felicitaciones a Julia!!!!"
            android:textColor="@color/gris"
            android:textSize="16sp"
            android:paddingStart="5dp"
            android:layout_marginLeft="5dp"
            android:maxLines="4"
            android:ellipsize="end"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

