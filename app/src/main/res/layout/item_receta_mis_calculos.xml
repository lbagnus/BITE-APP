<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imagenReceta"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:contentDescription="Imagen de la receta"
            android:background="@drawable/bg_rounded_beige"
            android:backgroundTint="@color/beige"
            android:clipToOutline="true"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tituloReceta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:text="Pasta a la Carbonara (Ajustada)" />

            <TextView
                android:id="@+id/detallesReceta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/gris"
                android:layout_marginTop="4dp"
                tools:text="Para 6 porciones - 35 min - FÃ¡cil" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btnEliminarLocal"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/delete_outlined"
            android:contentDescription="Eliminar receta local"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/gris"
            android:padding="4dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>