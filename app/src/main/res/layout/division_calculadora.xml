<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"> <LinearLayout
    android:id="@+id/primerRenglon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="8dp" android:paddingBottom="8dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <ImageButton
        android:id="@+id/btnVolver"
        android:layout_width="48dp" android:layout_height="48dp" android:background="@android:color/transparent"
        android:contentDescription="Back"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_marginStart="0dp"
        android:padding="4dp" />

    <TextView
        android:id="@+id/tituloCalculadora" android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Calculadora de Ingredientes"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:gravity="center_horizontal"
        android:layout_marginEnd="48dp" /> </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/primerRenglon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="16dp"> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/segundoRenglon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/recetaTitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pasta a la Carbonara"
                android:textSize="24sp" android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/btnGuardarRecetaAjustada" android:layout_width="48dp" android:layout_height="48dp" android:focusable="true"
                android:src="@drawable/download_outlined"
                android:clickable="true"
                android:padding="8dp"
                app:tint="@color/orange"
                android:contentDescription="Guardar Receta Ajustada" />
        </LinearLayout>

        <TextView
            android:id="@+id/recetaAutor"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Por Julia Roberts"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="4dp"/>

        <View
            android:id="@+id/linea"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D3D3D3"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/calcularTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recalcular por:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/porcionesBoxHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:id="@+id/porcionesTextBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/porcionesTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cantidad de porciones:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/porcionesDescripciones"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Ingresa la cantidad de porciones y los ingredientes se ajustarán automáticamente."
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/porcionesInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="80dp" android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:boxBackgroundColor="@color/beige">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputPorciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textAlignment="center"
                    tools:text="4"
                    android:singleLine="true"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <View
            android:id="@+id/linea2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D3D3D3"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/ingredientesTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidades de ingredientes:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/ingredientesDescripciones"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Modifica un ingrediente y el resto se recalculará, incluyendo las porciones."
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:id="@+id/layoutIngredientesCalculadora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp" />
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/noInternetLayoutCalculadora"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#DDFFFFFF"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/nowifi"
            android:contentDescription="No internet"
            app:tint="@color/gris" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No hay conexión a internet para esta función."
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="24dp" />

        <Button
            android:id="@+id/btnRetryInternetCalculadora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reintentar"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/orange"
            android:textColor="@color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>