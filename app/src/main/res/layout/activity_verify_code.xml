<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    >

    <!-- Cancelar -->
<TextView
android:id="@+id/cancelText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Cancelar"
android:textColor="#000000"
android:textStyle="bold"
android:textSize="14sp"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintStart_toStartOf="parent"
android:clickable="true"
    />

    <!-- Título -->
<TextView
android:id="@+id/titleText"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:text="Verificación"
android:textColor="#000000"
android:textSize="20sp"
android:textStyle="bold"
android:textAlignment="center"
android:layout_marginTop="24dp"
app:layout_constraintTop_toBottomOf="@+id/cancelText"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
    />

    <!-- Subtítulo -->
<TextView
android:id="@+id/subtitleText"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:text="Le enviamos un codigo de verificación a su correo electrónico, por favor revise su casilla e ingrese los 6 digitos. No comparta este código con nadie"
android:textColor="#000000"
android:textSize="14sp"
android:textAlignment="center"
android:layout_marginTop="16dp"
app:layout_constraintTop_toBottomOf="@id/titleText"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
    />

    <!-- Contenedor de los dígitos (LinearLayout con pesos para distribución) -->
<LinearLayout
android:id="@+id/boxinput"
android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="32dp"
    android:weightSum="6"
    app:layout_constraintTop_toBottomOf="@+id/subtitleText">

<com.google.android.material.textfield.TextInputLayout
style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:layout_weight="1">

<com.google.android.material.textfield.TextInputEditText
android:id="@+id/codeDigit1"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:maxLength="1"
android:inputType="number"
android:textAlignment="center"/>
    </com.google.android.material.textfield.TextInputLayout>
<com.google.android.material.textfield.TextInputLayout
style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_margin="4dp"
android:layout_weight="1">

<com.google.android.material.textfield.TextInputEditText
    android:id="@+id/codeDigit2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxLength="1"
    android:inputType="number"
    android:textAlignment="center"/>
</com.google.android.material.textfield.TextInputLayout>
<com.google.android.material.textfield.TextInputLayout
style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_margin="4dp"
android:layout_weight="1">

<com.google.android.material.textfield.TextInputEditText
    android:id="@+id/codeDigit3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxLength="1"
    android:inputType="number"
    android:textAlignment="center"/>
</com.google.android.material.textfield.TextInputLayout>
<com.google.android.material.textfield.TextInputLayout
style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_margin="4dp"
android:layout_weight="1">

<com.google.android.material.textfield.TextInputEditText
    android:id="@+id/codeDigit4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxLength="1"
    android:inputType="number"
    android:textAlignment="center"/>
</com.google.android.material.textfield.TextInputLayout>
<com.google.android.material.textfield.TextInputLayout
style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_margin="4dp"
android:layout_weight="1">

<com.google.android.material.textfield.TextInputEditText
    android:id="@+id/codeDigit5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxLength="1"
    android:inputType="number"
    android:textAlignment="center"/>
</com.google.android.material.textfield.TextInputLayout>
<com.google.android.material.textfield.TextInputLayout
style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_margin="4dp"
android:layout_weight="1">

<com.google.android.material.textfield.TextInputEditText
    android:id="@+id/codeDigit6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxLength="1"
    android:inputType="number"
    android:textAlignment="center"/>
</com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- Error -->
<TextView
android:id="@+id/errorText"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:text=""
android:textColor="@color/brown"
android:textSize="12sp"
android:visibility="gone"
android:layout_marginTop="8dp"
    android:textAlignment="center"
    app:layout_constraintTop_toBottomOf="@+id/boxinput"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón Continuar -->
<Button
android:id="@+id/continueButton"
android:layout_width="0dp"
    android:layout_height="50dp"
    app:cornerRadius="25dp"
    android:text="@string/continuar"
    android:textColor="@color/white"
    android:backgroundTint="@color/amarillo"
    android:enabled="true"
    android:elevation="4dp"
    android:layout_marginTop="24dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/errorText"
    app:layout_constraintWidth_percent="0.7"
    android:paddingHorizontal="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>