<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/primerRenglon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
    <!-- Cancelar -->
        <TextView
            android:id="@+id/cancelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            android:clickable="true"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/TituloAgregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar Comentario"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/AgregarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="14sp"
            android:enabled="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:clickable="true"
            />
    </LinearLayout>
    <!-- Título -->
    <TextView
        android:id="@+id/recetaTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Pasta a la Carbonara"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/primerRenglon"/>
    <TextView
        android:id="@+id/recetaAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Por Julia Roberts"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/recetaTitulo"
        android:paddingStart="20dp"/>
    <View
        android:id="@+id/linea"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/recetaAutor"/>
    <LinearLayout
        android:id="@+id/renglon2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/linea">
        <TextView
            android:id="@+id/textoApreta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toca para puntuar: "
            android:textColor="@color/black"
            android:textSize="18sp"
            android:paddingStart="20dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:rating="0"
            android:isIndicator="false"
            android:layout_gravity="center"
            android:theme="@style/Widget.AppCompat.RatingBar"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:progressTint="@color/amarillo"
            />

    </LinearLayout>
    <EditText
        android:id="@+id/titulobox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/text_background"
        android:hint="Título (opcional)"
        android:backgroundTint="@color/beige"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="16dp"
        android:textColor="#A0A0A0"
        android:textColorHint="#A0A0A0"
        app:layout_constraintTop_toBottomOf="@id/renglon2"/>
    <EditText
        android:id="@+id/titulobox2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_background"
        android:backgroundTint="@color/beige"
        android:hint="Reseña (opcional)"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="16dp"
        android:textColor="#A0A0A0"
        android:textColorHint="#A0A0A0"
        app:layout_constraintTop_toBottomOf="@id/titulobox"/>


</androidx.constraintlayout.widget.ConstraintLayout>