<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    >

    <!-- Primer Renglón: Cancelar | Título Popup | Agregar -->
<LinearLayout
android:id="@+id/primerRenglon"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:gravity="center_vertical"
android:weightSum="3"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <!-- Cancelar -->
<TextView
android:id="@+id/cancelText"
android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="Cancelar"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:textSize="14sp"
    android:clickable="true"
    android:gravity="start" />

    <!-- Título del Popup -->
<TextView
android:id="@+id/TituloAgregar"
android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="Agregar Comentario"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:textSize="18sp"
    android:gravity="center" />

    <!-- Agregar -->
<TextView
android:id="@+id/AgregarText"
android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="Agregar"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:textSize="14sp"
    android:enabled="false"
    android:clickable="true"
    android:gravity="end" />
    </LinearLayout>

    <!-- Título de la Receta -->
<TextView
android:id="@+id/recetaTitulo"
android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:text="Pasta a la Carbonara"
    android:textSize="24sp"
    android:textStyle="bold"
    android:textColor="@color/black"
    android:layout_marginHorizontal="0dp"
    app:layout_constraintTop_toBottomOf="@id/primerRenglon"/>

    <!-- Autor de la Receta -->
<TextView
android:id="@+id/recetaAutor"
android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Por Julia Roberts"
    android:textColor="@color/black"
    android:textSize="16sp"
    app:layout_constraintTop_toBottomOf="@id/recetaTitulo"
    android:layout_marginTop="4dp"
    android:paddingStart="0dp"/>

    <!-- Línea divisoria -->
<View
android:id="@+id/linea"
android:layout_width="match_parent"
android:layout_height="1dp"
android:background="#D3D3D3"
android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@id/recetaAutor"/>

    <!-- Renglón de Puntuación (Texto + RatingBar) -->
<LinearLayout
android:id="@+id/renglon2"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:gravity="center_vertical"
android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@id/linea">

<TextView
android:id="@+id/textoApreta"
android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="Toca para puntuar: "
    android:textColor="@color/black"
    android:textSize="18sp"
    android:gravity="start"/>

<RatingBar
android:id="@+id/ratingBar"
android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:numStars="5"
    android:stepSize="1"
    android:rating="0"
    android:isIndicator="false"
    android:layout_gravity="center"
    android:theme="@style/Widget.AppCompat.RatingBar"
    android:progressTint="@color/amarillo"
    android:scaleX="0.8"
    android:scaleY="0.8"
    />
    </LinearLayout>

    <!-- EditText para Título de Reseña -->
<EditText
android:id="@+id/titulobox"
android:layout_width="match_parent"
android:layout_height="50dp"
android:layout_marginTop="16dp"
    android:background="@drawable/text_background"
    android:hint="Título (opcional)"
    android:backgroundTint="@color/beige"
    android:inputType="text"
    android:paddingHorizontal="16dp"
    android:textColor="@color/gris"
    android:textColorHint="@color/gris"
    app:layout_constraintTop_toBottomOf="@id/renglon2"/>

    <!-- EditText para Contenido de Reseña -->
<EditText
android:id="@+id/titulobox2"
android:layout_width="match_parent"
android:layout_height="120dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/text_background"
    android:backgroundTint="@color/beige"
    android:hint="Reseña (opcional)"
    android:inputType="textMultiLine"
    android:gravity="top|start"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp"
    android:textColor="@color/gris"
    android:textColorHint="@color/gris"
    app:layout_constraintTop_toBottomOf="@id/titulobox"/>

    </androidx.constraintlayout.widget.ConstraintLayout>