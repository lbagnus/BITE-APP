<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.oasis.bite">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bite"
        tools:targetApi="31">




        <activity
            android:name="com.oasis.bite.MainActivity"
            android:exported="true" />

        <activity
            android:name="com.oasis.bite.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.Bite">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.oasis.bite.ForgotPasswordActivity"
            android:exported="false" />

        <activity
            android:name="com.oasis.bite.VerifyCodeActivity"
            android:exported="false" />
        <activity
            android:name="com.oasis.bite.ResetPasswordActivity"
            android:exported="false" />

        <activity
            android:name="com.oasis.bite.ComentarioActivity"
            />

        <activity
            android:name="com.oasis.bite.AgregarRecetaActivity"
            />

        <activity
            android:name="com.oasis.bite.AgregarTituloRecetaActivty"
            />

        <activity
            android:name="com.oasis.bite.AutorizacionBoxesActivity"
            />

        <activity
            android:name="com.oasis.bite.AutorizarActivity"
            android:exported="false"
            />
        <activity
            android:name="com.oasis.bite.presentation.ChangePasswordActivity"
            android:exported="false"
            />
        <activity
            android:name="com.oasis.bite.MisCalculosActivity"
            android:exported="false"
            />
        <activity android:name="com.oasis.bite.RecetaLocalDetailActivity"
            android:exported="false" />


    </application>

</manifest>

